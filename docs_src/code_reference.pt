<tal:main_template define="main_template load: main_template.pt" metal:use-macro="main_template">
<div metal:fill-slot='body'>

    <div class="span12">
        <h2>${len(ships)} ships for OpenTTD</h2>
        <hr />
        <tal:subclasses repeat="subclass doc_helper.get_ships_by_subclass()">
            <h4>${subclass.__name__} <small>Subclass</small></h4>
            <table class="table table-striped table-condensed table-bordered small">
                <thead>
                    <tr>
                        <th style="background-color:#eee;">Ship Name</th>
                        <th style="background-color:#eee;">Extra Info</th>
                        <th style="background-color:#eee;" class="number">Intro Date</th>
                    </tr>
                </thead>
                <tbody>
                    <tal:ships repeat="ship doc_helper.get_ships_by_subclass()[subclass]">
                        <tr>
                            <td>${ship.get_name_substr()} ${base_lang_strings[ship.get_str_name_suffix()]}</td>
                            <td>${base_lang_strings[ship.get_str_type_info()]}</td>
                            <td class="number">${ship.intro_date}</td>
                        </tr>
                    </tal:ships>
                </tbody>
            </table>
            <br />
        </tal:subclasses>
    </div>

</div>
</tal:main_template>
